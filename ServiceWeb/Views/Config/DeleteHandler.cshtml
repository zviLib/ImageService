@{
    ViewBag.Title = "DeleteHandler";
}

<h2>Delete Handler</h2>

<p> Please confirm deletion of:</p>
<p id="name"></p>
<button id="delete">OK</button>
<button id="cancel">Cancel</button>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    // backup text
    var txt = localStorage.getItem("selectHand");
    $("#name").text(txt);

    // on cancel - delete selection and return
    $("#cancel").click(function () {
        localStorage.removeItem("selectHand");
        window.location.href = '/Config';
        return false;
    });

    $("#delete").click(function () {

        var input = {
            path: $("#name").text()
        };

        localStorage.removeItem("selectHand");

        $.post("@Url.Action("RemoveHandler")", input, function func(data) { @Url.Action("Index", "Config");
        },"json");
        
        //window.location.href = '/Config';
        return false;
    });

</script>