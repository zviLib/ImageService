@model IEnumerable<ServiceWeb.Models.Handler>
@{
    ViewBag.Title = "Config";
}

<h1>Configuration</h1>

<table class="table">
    <tr>
        <th>Output Directory:</th>
        <th>@ViewBag.Output</th>
    </tr>
    <tr>
        <th>Source Name:</th>
        <th>@ViewBag.Source</th>
    </tr>
    <tr>
        <th>Log Name:</th>
        <th>@ViewBag.Log</th>
    </tr>
    <tr>
        <th>ThumbSize:</th>
        <th>@ViewBag.Thumb</th>
    </tr>
</table>

<h4>Watched directories:</h4>
<h5>Click to stop watching</h5>
@foreach (var item in Model)
{
    <a href="@Url.Action("Delete", "Config", new { id= item.ID })" class="btn btn-default" role="button">@item.Path</a>
    <br />
}
